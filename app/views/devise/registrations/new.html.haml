.page-header
  %h1 Sign Up

.well

  = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f|
    = devise_error_messages!
    .form-group
      = f.label :email, :class=>"col-md-2 control-label"
      .col-md-8
        = f.email_field :email, :required=>true, autofocus: true, :class=>"form-control"
    .form-group
      = f.label :password, :class=>"col-md-2 control-label"
      .col-md-8
        = f.password_field :password, :required=>true, autocomplete: "off", :class=>"form-control"
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
    .form-group
      = f.label :password_confirmation, :class=>"col-md-2 control-label"
      .col-md-8
        = f.password_field :password_confirmation, :required=>true, autocomplete: "off", :class=>"form-control"
    .form-group
      .col-md-offset-2.col-md-6
        = f.submit "Sign up", :class=>"btn btn-raised btn-primary check_password_validity"
      .col-md-2
        .pull-right
          = render "devise/shared/links"
